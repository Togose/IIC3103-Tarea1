<h3>Escribe un Comentario</h3>
<p>
  <%= form_for [ @entry, @comment ] do |f| %>
    <p>
      <%= f.label :author_name %><br/>
      <%= f.text_field :author_name %>
    </p>
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
  <% end %>
</p>
