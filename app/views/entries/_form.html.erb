
<div style="width:650px; margin-top:100px; margin-left: auto; margin-right: auto">
  <%= bootstrap_form_for(@entry) do |f| %>
    <ul>
    <% @entry.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.text_area :subhead %>
    </p>
    <p>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  <p>
  <%= button_to 'Volver', entries_path, :method => "get",
    class: "btn btn-primary" %>
  </p>
</div>
